programa {
  funcao inicio() {
    real temperatura

    escreva("Digite a temperatura: ")
    leia(temperatura)
   
    se (temperatura > 0) {
      escreva("A temperatura é positiva.\n")
    } senao se (temperatura < 0) {
      escreva("A temperatura é negativa.\n")
    } senao {
      escreva("A temperatura é zero.\n")
    }
  }
}
